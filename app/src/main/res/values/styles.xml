<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for light mode. -->
    <style name="Theme.Projhope" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@android:color/white</item>
        .
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <!-- Toolbar Title Text Style -->
    <style name="ToolbarTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Popup Theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- Customize your popup theme here -->
    </style>

    <!-- No ActionBar theme for SplashActivity -->
    <style name="Theme.Projhope.NoActionBar" parent="Theme.Projhope">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
