<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".GroupsFragment">

    <!-- Header for Groups -->
<TextView
android:id="@+id/groups_header"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Your Groups"
android:textSize="24sp"
android:textStyle="bold"
android:textColor="@color/buttonBackground"
    android:layout_marginBottom="16dp"/>

    <!-- RecyclerView to display user's groups -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/groups_recycler_view"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:scrollbars="vertical"
android:clipToPadding="false"/>

    <!-- Floating Action Button to create a new group -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fab_new_group"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="end|bottom"
android:layout_margin="16dp"
android:src="@drawable/ic_add"
android:backgroundTint="@color/colorAccent"
    android:contentDescription="Add New Group"/>

    </LinearLayout>
